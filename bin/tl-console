#!/bin/env ruby
require 'rubygems'
require 'bundler/setup'
require 'pry'
require 'testlab'

current_dir = File.dirname(__FILE__)
log_file = File.join(current_dir, "..", "testlab.log")
logger = ZTK::Logger.new(log_file)

ui = ZTK::UI.new(:logger => logger) # ui interface class
l = TestLab.new(:ui => ui)          # lab
l.boot                              # boot the lab
n = l.nodes.first                   # node
c1 = TestLab::Container.first('server-east-1')
c2 = TestLab::Container.first('server-west-1')
c3 = TestLab::Container.first('chef-server')
binding.pry
